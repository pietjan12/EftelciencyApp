<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    cardview:contentPaddingLeft="5dp"
    cardview:contentPaddingTop="5dp"
    cardview:contentPaddingBottom="5dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="2dp"
    cardview:cardUseCompatPadding="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attractienaam"
                android:layout_width="fill_parent"
                android:textStyle="bold"
                android:text="bla"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_weight=".5"
                android:gravity="left|top"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/attractietype"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="bla"
                android:gravity="left|top"
                android:textStyle="italic"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/attractiewachttijd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="bla"
                android:gravity="left|top"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="right|top"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/attractiepriority"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:focusable="false"
                android:layout_weight="3"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:scaleX="1"
                android:scaleY="1"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>